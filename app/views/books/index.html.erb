<!DOCTYPE html>
<html>
<head>
	<title>Bookers</title>
</head>
<body>
	<div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
	<h2>Books</h2>
	<table>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
		
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= book.title %>
				
			</td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book.id), class: "show_#{book.id}" %></td>
			<td><%= link_to "Edit", edit_book_path(book.id), class: "edit_#{book.id}" %></td>
			<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, class: "destroy_#{book.id}" %></td>
		</tr>
		<% end -%>
	</table>
	<h3>New Book</h3>
	<%= form_for(@book) do |f| %>
	<p>Title</p>
	<div>
		<%= f.text_field :title, class: "book_title" %>
	</div>
	<p>Body</p>
	<div>
		<%= f.text_area :body, class: "book_body" %>
	</div>
	<div>
		<%= f.submit 'Create Book' %>
	</div>

	<% end -%>

</body>
</html>